extends _default.pug

block page-name
    - var pageName = 'exposition ' + projectName
    - var pageNameClass = 'pratique'


block content
    ul(class=pageNameClass + '__infos-list')
        li(class=pageNameClass + '__infos-list__item' + ' ' + pageNameClass + '__infos-list__item--address') Palais des Beaux-Arts de Houtesiplou
            span
        li(class=pageNameClass + '__infos-list__item' + ' ' + pageNameClass + '__infos-list__item--date') Du #[time(datetime="2017-11-20") 20 novembre 2017] au #[time(datetime="2018-03-18") 18 mars 2018]
        li(class=pageNameClass + '__infos-list__item' + ' ' + pageNameClass + '__infos-list__item--schedule') Ouvert tous les jours de #[time(datetime="T10:00") 10] à #[time(datetime="T18:00") 18 heures] sauf le lundi
        li(class=pageNameClass + '__infos-list__item' + ' ' + pageNameClass + '__infos-list__item--price')
            span(class=pageNameClass + '__infos-list__sub-part')!= 'Entrée&nbsp;: '
            span(class=pageNameClass + '__infos-list__sub-part')= 'Adultes 4 € '
            span(class=pageNameClass + '__infos-list__sub-part')= 'Enfants 2 €'
        li(class=pageNameClass + '__infos-list__item' + ' ' + pageNameClass +'__infos-list__item--phone')
            span(class=pageNameClass + '__infos-list__sub-part')!= 'Téléphone&nbsp;: '
            a(class=pageNameClass + '__infos-list__sub-part', href="tel:+32470676767", title="Nous Appeler via numéro de téléphone") +32 (0) 470 67 67 67

    section(aria-labelledby=pageNameClass + '__catalog-form-container__title', class=pageNameClass + '__catalog-form-container')
        h2(id=pageNameClass + '__catalog-form-container__title', aria-level="2", class=pageNameClass + '__catalog-form-container__title') Demandez votre catalogue
        form(class=pageNameClass + '__catalog-form-container__form', action="#", method="post")
            label(class=pageNameClass + '__catalog-form-container__label', for="lastname-input")!= 'Nom&nbsp;: '
            input(class=pageNameClass + '__catalog-form-container__input', type="text", name="lastname", placeholder="Snow", id="lastname-input")

            label(class=pageNameClass + '__catalog-form-container__label', for="firstname-input")!= 'Téléphone&nbsp;: '
            input(class=pageNameClass + '__catalog-form-container__input', type="text", name="firstname", placeholder="Jon", id="firstname-input")

            label(class=pageNameClass + '__catalog-form-container__label', for="address-input")!= 'Téléphone&nbsp;: '
            input(class=pageNameClass + '__catalog-form-container__input', type="text", name="address", placeholder="Rue Bidule 125", id="address-input")

            label(class=pageNameClass + '__catalog-form-container__label', for="post-code-input")!= 'Téléphone&nbsp;: '
            input(class=pageNameClass + '__catalog-form-container__input', type="text", name="post_code", placeholder="1000", id="post-code-input")

            label(class=pageNameClass + '__catalog-form-container__label', for="city-input")!= 'Téléphone&nbsp;: '
            input(class=pageNameClass + '__catalog-form-container__input', type="text", name="city", placeholder="Bruxelles", id="city-input")

            label(class=pageNameClass + '__catalog-form-container__label', for="country-input")!= 'Téléphone&nbsp;: '
            input(class=pageNameClass + '__catalog-form-container__input', type="text", name="country", placeholder="Belgique", id="country-input")

            input(class=pageNameClass + '__catalog-form-container__submit', type="submit", value="Demander")

