doctype html
html(lang="fr")
    head
        meta(charset="utf-8")
        block title
            title XXXXXXXX
        link(rel="stylesheet", href="assets/css/styles.css")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1")
        meta(http-equiv="x-ua-compatible" content="ie=edge")
        meta(name="description" content="Projet (The Artist) réalisé dans le cadre du cours de design web")
        meta(name="author" content= webmasterName)
        meta(name="keywords" content=client + " , design web, HEPL, infographie")
